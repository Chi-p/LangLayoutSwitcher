<Window x:Class="LangLayoutSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLayoutSwitcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Name="Tbx" Width="250" Height="80" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Margin="5"></TextBox>
            <Button Click="Button_Click" Margin="5">Switch</Button>
        </StackPanel>
    </Grid>
</Window>
